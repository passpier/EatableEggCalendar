{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es5", "es6", "es2017.object"],
    "outDir": "dist",
    "types": ["node"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "babel.config.js"]
}
